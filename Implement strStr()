class Solution {
    public int strStr(String haystack, String needle) {
       int temp =0;
        if(needle==null ||haystack == null){
           return 0;
       }
        else if(!haystack.contains(needle)){
            return -1;
        }
        else{
            if(haystack.equals(needle))
            {
                return 0;
            }
        }
      
    return haystack.indexOf(needle);    
    }
}
